<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="32dp">

        <!-- Logo + Asset Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/asset_logo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="Logo"
                android:scaleType="centerCrop"
                android:src="@drawable/bch_logo" />

            <TextView
                android:id="@+id/asset_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bitcoin_cash_bch"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Price Text -->

        <!-- Time Range Buttons -->
        <TextView
            android:id="@+id/asset_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:text="@string/_1_589"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/timeRangeButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btn_1h"
                android:text="@string/_1h"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/Widget.Material3.Button.TextButton" />

            <Button
                android:id="@+id/btn_24h"
                android:text="@string/_24h"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/Widget.Material3.Button.TextButton" />

            <Button
                android:id="@+id/btn_7d"
                android:text="@string/_7d"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/Widget.Material3.Button.TextButton" />

            <Button
                android:id="@+id/btn_30d"
                android:text="@string/_30d"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/Widget.Material3.Button.TextButton" />

            <Button
                android:id="@+id/btn_1y"
                android:text="@string/_1y"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/Widget.Material3.Button.TextButton" />

            <Button
                android:id="@+id/btn_all"
                android:text="@string/all"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/Widget.Material3.Button.TextButton" />
        </LinearLayout>

        <!-- Placeholder for Chart -->
        <FrameLayout
            android:id="@+id/chartPlaceholder"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@android:color/darker_gray"
            android:layout_marginBottom="24dp">

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/line_chart"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginBottom="24dp" />

        </FrameLayout>

        <!-- Stats Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Each row here -->
            <TextView android:text="@string/market_cap_600b" style="@style/DetailStat" />
            <TextView android:text="@string/volume_24h_100b" style="@style/DetailStat" />
            <TextView android:text="@string/max_supply_21m" style="@style/DetailStat" />
            <TextView android:text="@string/all_time_high_68_000" style="@style/DetailStat" />
            <TextView android:text="@string/all_time_low_67" style="@style/DetailStat" />
            <TextView android:text="@string/unlocked_market_cap_300b" style="@style/DetailStat" />
            <TextView android:text="@string/fully_diluted_cap_1_2t" style="@style/DetailStat" />
            <TextView android:text="@string/circulating_supply_19m" style="@style/DetailStat" />
            <TextView android:text="@string/total_supply_21m" style="@style/DetailStat" />
            <TextView android:text="@string/rank_1" style="@style/DetailStat" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
